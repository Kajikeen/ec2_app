<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/user_images/#{@user.image_name}" %>">
      <h2><%= @user.name %></h2>
      <% if @user.id == @current_user.id %>
        <p><%= @user.email %></p>
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
    </div>

    <ul class="user-tabs">
      <li><%= link_to("投稿した問題", "/users/#{@user.id}") %></li>
      <li><%= link_to("いいね!した問題", "/users/#{@user.id}/likes") %></li>
      <% if @user.id == @current_user.id %>
      <li class="active"><%= link_to("あなたの問題への質問", "/users/#{@user.id}/questions") %>
      <% end %>
      </li>
    </ul>

    <% @questions.each do |question| %>
      <% question = Question.find_by(id: question.post_id) %>
      <div class="posts-index-item">
        <div class="post-right">
          <div class="post-user-name">
            <%= question %>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
